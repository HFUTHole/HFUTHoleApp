{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "strictPropertyInitialization": false,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "extends": "expo/tsconfig.base",
  "include": [
    "src",
    "App.tsx",
    "app.d.ts",
    "@types/**/**.d.ts",
    "@types/**.d.ts"
  ]
}
