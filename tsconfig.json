{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "strictPropertyInitialization": false,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "checkJs": true,
    "strictNullChecks": true,
    "strict": true,
    "noImplicitAny": true,
    "types": ["bun-types"]
  },
  "extends": "expo/tsconfig.base",
  "include": [
    "src",
    "App.tsx",
    "src/app.d.ts",
    "@types/**/**.d.ts",
    "@types/**.d.ts",
    "@theme/**.js",
    "**.**.js"
  ]
}
